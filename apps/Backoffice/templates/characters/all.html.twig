{% extends 'base.html.twig' %}

{% block body %}

    <table id="table-characters" class="striped">
        <thead>
        <tr>
            <td>Name</td>
            <td>Owner</td>
            <td>
                <a href="{{ path('characters_all', {'order': 'skill_points', 'dir': 'DESC'}) }}">&#9660;</a>
                Skill Points
                <a href="{{ path('characters_all', {'order': 'skill_points', 'dir': 'ASC'}) }}">&#9650;</a>
            </td>
            <td>
                <a href="{{ path('characters_all', {'order': 'rank', 'dir': 'DESC'}) }}">&#9660;</a>
                Rank
                <a href="{{ path('characters_all', {'order': 'rank', 'dir': 'ASC'}) }}">&#9650;</a>
            </td>
            <td>
                <a href="{{ path('characters_all', {'order': 'fights_count', 'dir': 'DESC'}) }}">&#9660;</a>
                Fights Count
                <a href="{{ path('characters_all', {'order': 'fights_count', 'dir': 'ASC'}) }}">&#9650;</a>
            </td>
            <td>Wins - Draws - Losses</td>
        </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character.name }}</td>
                <td>{{ character.owner }}</td>
                <td>{{ character.skill_points }}</td>
                <td>{{ character.rank }}</td>
                <td>{{ character.fights_count }}</td>
                <td>{{ character.wins_count }} - {{ character.draws_count }} - {{ character.losses_count }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock body %}

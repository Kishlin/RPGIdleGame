<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kishlin\Backend\Account\Domain\Account" table="accounts">
        <id name="accountId" type="account_id" column="account_id" length="36" />

        <embedded name="accountUsername" class="Kishlin\Backend\Account\Domain\AccountUsername" use-column-prefix="false" />

        <embedded name="accountEmail" class="Kishlin\Backend\Account\Domain\AccountEmail" use-column-prefix="false" />

        <embedded name="accountPassword" class="Kishlin\Backend\Account\Domain\AccountPassword" use-column-prefix="false" />

        <embedded name="accountIsActive" class="Kishlin\Backend\Account\Domain\AccountIsActive" use-column-prefix="false" />
    </entity>

</doctrine-mapping>

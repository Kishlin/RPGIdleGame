<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kishlin\Backend\Account\Domain\Account" table="accounts">
        <id name="id" type="account_id" column="id" length="36" />

        <embedded name="username" class="Kishlin\Backend\Account\Domain\ValueObject\AccountUsername" use-column-prefix="false" />

        <embedded name="email" class="Kishlin\Backend\Account\Domain\ValueObject\AccountEmail" use-column-prefix="false" />

        <embedded name="password" class="Kishlin\Backend\Account\Domain\ValueObject\AccountPassword" use-column-prefix="false" />

        <embedded name="salt" class="Kishlin\Backend\Account\Domain\ValueObject\AccountSalt" use-column-prefix="false" />

        <embedded name="isActive" class="Kishlin\Backend\Account\Domain\ValueObject\AccountIsActive" use-column-prefix="false" />
    </entity>

</doctrine-mapping>

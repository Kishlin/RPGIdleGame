<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kishlin\Backend\RPGIdleGame\Character\Domain\Character" table="characters">
        <id name="id" type="character_id" column="id" length="36" />

        <embedded name="name" class="Kishlin\Backend\RPGIdleGame\Character\Domain\ValueObject\CharacterName" use-column-prefix="false" />

        <field name="owner" type="character_owner" column="owner" length="36" />

        <embedded name="skillPoint" class="Kishlin\Backend\RPGIdleGame\Character\Domain\ValueObject\CharacterSkillPoint" use-column-prefix="false" />

        <embedded name="health" class="Kishlin\Backend\RPGIdleGame\Character\Domain\ValueObject\CharacterHealth" use-column-prefix="false" />

        <embedded name="attack" class="Kishlin\Backend\RPGIdleGame\Character\Domain\ValueObject\CharacterAttack" use-column-prefix="false" />

        <embedded name="defense" class="Kishlin\Backend\RPGIdleGame\Character\Domain\ValueObject\CharacterDefense" use-column-prefix="false" />

        <embedded name="magik" class="Kishlin\Backend\RPGIdleGame\Character\Domain\ValueObject\CharacterMagik" use-column-prefix="false" />

        <embedded name="rank" class="Kishlin\Backend\RPGIdleGame\Character\Domain\ValueObject\CharacterRank" use-column-prefix="false" />

        <embedded name="fightsCount" class="Kishlin\Backend\RPGIdleGame\Character\Domain\ValueObject\CharacterFightsCount" use-column-prefix="false" />

</entity>

</doctrine-mapping>
